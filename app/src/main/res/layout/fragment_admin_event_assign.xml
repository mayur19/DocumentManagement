<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/select_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Select User:"
            android:layout_marginTop="20dp" />
        <Spinner
            android:id="@+id/xUserSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/backgroud_spinner"
            android:spinnerMode="dropdown"
            android:layout_marginTop="5dp"
            android:layout_below="@id/select_user"
            />
        <TextView
            android:id="@+id/select_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Select Event:"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/xUserSpinner"/>
        <Spinner
            android:id="@+id/xEventSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroud_spinner"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/select_event"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign Event"
            android:layout_below="@id/xEventSpinner"
            android:id="@+id/xAssignButton"
            android:layout_gravity="center" />

    </RelativeLayout>

</FrameLayout>