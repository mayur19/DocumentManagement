<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lambelltech.mayur.dms_master.MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN LOGIN"
        android:id="@+id/admin_text"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etUsername"
        android:hint="Enter Username"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_person_pin_black_36dp"
        android:layout_weight=".75"
        android:ellipsize="start"
        android:includeFontPadding="false"
        android:layout_above="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Enter Password"
        android:includeFontPadding="false"
        android:background="@drawable/rounded_edittext"
        android:layout_weight=".75"
        android:layout_above="@+id/btn_login"
        android:layout_alignLeft="@+id/btn_login"
        android:drawableLeft="@drawable/ic_lock_black_36dp"
        android:layout_alignStart="@+id/btn_login"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="LOGIN"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_login"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:id="@+id/progressbar"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/circular_progress_view"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
